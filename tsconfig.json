{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ES2022",
    "target": "ES2022",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true, // Enable declaration files
    "declarationDir": "./types", // Separate declaration files output
    "emitDeclarationOnly": true, // Only emit declaration files
    "noEmit": false // Ensure files are emitted
  }
}